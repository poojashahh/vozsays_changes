<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/vCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"

                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/vQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vCategory"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_1sdp"
                android:paddingRight="@dimen/_1sdp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sdp" />

            <RelativeLayout
                android:id="@+id/imagelayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_below="@+id/vQuestion"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <LinearLayout
                    android:id="@+id/visualimagelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/first_option_iv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_weight="1"
                        android:scaleType="center" />

                    <ProgressBar
                        android:id="@+id/visual_pb1"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/second_option_iv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:layout_alignEnd="@+id/first_option_iv"
                        android:layout_weight="1"
                        android:scaleType="center" />

                    <ProgressBar
                        android:id="@+id/visual_pb2"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_weight="1"
                        android:visibility="gone"
                         />
                </LinearLayout>

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignEnd="@+id/visualimagelayout"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingRight="@dimen/_1sdp"
                    android:src="@drawable/frag_right_arrow"

                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/frag_visual_option_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imagelayout"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/option_first_rl"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:background="@drawable/pink_border_circle">

                    <ImageView
                        android:id="@+id/option_first_btn"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:paddingLeft="@dimen/_1sdp"
                        android:paddingRight="@dimen/_1sdp"
                        android:src="@drawable/frag_grey_logo" />

                    <TextView
                        android:id="@+id/option_first_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_22sdp"
                        android:visibility="gone"
                         />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/option_second_rl"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/pink_border_circle"
                    android:paddingRight="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/option_second_btn"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:paddingLeft="@dimen/_1sdp"
                        android:paddingRight="@dimen/_1sdp"
                        android:src="@drawable/frag_grey_logo" />

                    <TextView
                        android:id="@+id/option_secong_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_22sdp"
                        android:visibility="gone"
                   />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</layout>
